<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.KutuphaneBilgilerAvrupaBolgesiDeparHatlariActivity">

    <Button
        android:id="@+id/btnKutuphaneBilgilerAvrupaBolgesiDeparHatlariBaslikIcon"
        android:layout_width="@dimen/iconBoyut"
        android:layout_height="@dimen/txtHeightBoyut"
        android:background="@color/logoRengi"
        android:drawableLeft="@drawable/left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnKutuphaneBilgilerAvrupaBolgesiDeparHatlariBaslik"
        android:layout_width="@dimen/butonBoyut"
        android:layout_height="@dimen/txtHeightBoyut"
        android:background="@color/logoRengi"
        android:paddingRight="@dimen/btnProfilBaslikPaddingRight"
        android:text="@string/kutuphaneBilgiler"
        android:textColor="@color/formRengi"
        android:textSize="@dimen/formYaziBoyut"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAvrupaBolgesiDeparHatlari"
        android:layout_width="0dp"
        android:layout_height="@dimen/txtHeightBoyut"
        android:background="@color/baslikButonRengi"
        android:text="@string/avrupaBolgesiDeparHatlari"
        android:textColor="@color/logoRengi"
        android:textSize="@dimen/formYaziOrtaBoyut"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKutuphaneBilgilerAvrupaBolgesiDeparHatlariBaslik" />

    <ListView
        android:id="@+id/listViewAvrupaBolgesiDeparHatlari"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAvrupaBolgesiDeparHatlari"
        tools:layout_editor_absoluteX="162dp"
        tools:listitem="@layout/cardview_anadolu_bolgesi_depar_hatlari"/>


</androidx.constraintlayout.widget.ConstraintLayout>