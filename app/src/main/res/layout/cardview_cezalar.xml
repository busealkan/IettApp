<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cezalarConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/formRengi"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/txtCezalarCeza"
                android:layout_width="@dimen/cezaBaslikWidth"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:gravity="start"
                android:textColor="@color/logoRengi"
                android:textSize="@dimen/formYaziBoyut"
                android:paddingLeft="5dp"
                app:layout_constraintStart_toEndOf="@+id/txtCezalarCezaYeri"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/ceza" />

            <TextView
                android:id="@+id/txtCezalarCezaYeri"
                android:layout_width="@dimen/cezaBaslikWidth"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:gravity="start"
                android:textColor="@color/logoRengi"
                android:textSize="@dimen/formYaziBoyut"
                android:paddingLeft="12dp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/txtCezalarCezaTarihi"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/cezaYeri" />

            <TextView
                android:id="@+id/txtCezalarCezaTarihi"
                android:layout_width="@dimen/cezaBaslikWidth"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:textColor="@color/logoRengi"
                android:textSize="@dimen/formYaziBoyut"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/cezaTarih" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>